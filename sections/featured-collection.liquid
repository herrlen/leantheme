{% comment %}
  Lean Featured Collection
  Style: Minimalist Grid
  Layout: Image top, Title left + Price right (Bottom)
  No Buttons.
{% endcomment %}

<div class="section-featured-collection section-{{ section.id }}-padding">
  <div class="page-width">
    
    {%- if section.settings.heading != blank -%}
      <div class="collection-heading">
        <h2>{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="product-grid">
      {%- assign collection = section.settings.collection -%}
      {%- assign limit = section.settings.products_to_show -%}

      {%- if collection != blank -%}
        {%- for product in collection.products limit: limit -%}
          <a href="{{ product.url }}" class="product-card">
            
            <div class="card-media">
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                width="{{ product.featured_image.width }}"
                height="{{ product.featured_image.height }}"
                loading="lazy"
                class="card-img"
              >
              {%- if product.compare_at_price > product.price -%}
                <span class="badge-sale">Sale</span>
              {%- endif -%}
            </div>

            <div class="card-info">
              <h3 class="card-title">{{ product.title }}</h3>
              <div class="card-price">
                {%- if product.compare_at_price > product.price -%}
                  <span class="price-compare">{{ product.compare_at_price | money }}</span>
                {%- endif -%}
                <span class="price-final">{{ product.price | money }}</span>
              </div>
            </div>

          </a>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..4) -%}
          <div class="product-card">
            <div class="card-media">
              {{ 'product-' | append: i | placeholder_svg_tag: 'card-img placeholder' }}
            </div>
            <div class="card-info">
              <h3 class="card-title">Beispiel Produkt</h3>
              <span class="card-price">€49,00</span>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
    
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .collection-heading {
    margin-bottom: 40px;
    text-align: {{ section.settings.heading_align }};
  }
  
  .collection-heading h2 {
    font-size: 2rem;
    margin: 0;
    font-weight: 500;
  }

  /* GRID SYSTEM */
  .product-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Mobile: 2 Spalten */
    gap: 20px 15px; /* Zeile Spalte */
  }

  @media (min-width: 750px) {
    .product-grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: 40px 30px;
    }
  }

  /* CARD STYLING */
  .product-card {
    display: block;
    text-decoration: none;
    color: inherit;
    group: hover; /* Für Hover Effekte */
  }

  /* Image Area */
  .card-media {
    position: relative;
    overflow: hidden;
    border-radius: 4px; /* Minimal abgerundet */
    margin-bottom: 12px;
    background-color: #f4f4f4;
  }

  .card-img {
    width: 100%;
    height: auto;
    aspect-ratio: 1 / 1; /* Quadratisch */
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  /* Zoom Effect on Hover */
  .product-card:hover .card-img {
    transform: scale(1.03);
  }

  .badge-sale {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #000;
    color: #fff;
    font-size: 0.7rem;
    padding: 3px 6px;
    text-transform: uppercase;
    font-weight: 700;
    border-radius: 2px;
  }

  /* Info Area: Flexbox for Left/Right alignment */
  .card-info {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    font-size: 1rem;
    line-height: 1.4;
  }

  .card-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 400; /* Normal weight looks elegant */
    padding-right: 10px;
    flex: 1; /* Nimmt Platz links ein */
  }

  .card-price {
    white-space: nowrap; /* Kein Umbruch im Preis */
    font-weight: 600; /* Preis etwas fetter */
    text-align: right;
  }

  .price-compare {
    text-decoration: line-through;
    color: #888;
    font-size: 0.9rem;
    margin-right: 5px;
    font-weight: 400;
  }
</style>

{% schema %}
{
  "name": "Feature Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Bestseller"
    },
    {
      "type": "select",
      "id": "heading_align",
      "label": "Ausrichtung Überschrift",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "center", "label": "Zentriert" }
      ],
      "default": "left"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Kategorie wählen"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Anzahl Produkte"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Spalten (Desktop)"
    },
    {
      "type": "header",
      "content": "Abstände"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Feature Products"
    }
  ]
}
{% endschema %}