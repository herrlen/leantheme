{% comment %}
  Lean Testimonials
  Grid Layout mit konfigurierbaren Sternen.
{% endcomment %}

<div class="testimonials-section section-{{ section.id }}-padding">
  <div class="page-width">
    
    {%- if section.settings.heading != blank -%}
      <div class="section-heading text-center">
        <h2>{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="testimonial-grid">
      {%- for block in section.blocks -%}
        <div class="testimonial-card" {{ block.shopify_attributes }}>
          
          <div class="stars">
            {%- for i in (1..block.settings.stars) -%}
              <svg class="star-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" stroke="none"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
            {%- endfor -%}
          </div>

          <div class="testimonial-text">
            "{{ block.settings.text }}"
          </div>

          <div class="testimonial-author">
            — {{ block.settings.author }}
          </div>

        </div>
      {%- endfor -%}
    </div>

  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }

  .text-center { text-align: center; }
  
  .section-heading h2 {
    font-size: 2rem;
    margin-bottom: 40px;
    color: {{ section.settings.text_color }};
  }

  .testimonial-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
  }

  @media (min-width: 750px) {
    .testimonial-grid {
      grid-template-columns: repeat(3, 1fr); /* 3 Spalten auf Desktop */
    }
  }

  .testimonial-card {
    background: #fff;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    text-align: center;
    transition: transform 0.3s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-5px); /* Leichter Schwebe-Effekt */
  }

  .stars {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 4px;
    color: #FFD700; /* Gold */
    margin-bottom: 15px;
  }

  .stars .star-icon {
    display: inline-block;
    flex-shrink: 0;
  }
  
  .testimonial-text {
    font-size: 1.1rem;
    line-height: 1.5;
    margin-bottom: 20px;
    font-style: italic;
    color: #444;
  }

  .testimonial-author {
    font-weight: 700;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.8;
  }

</style>

{% schema %}
{
  "name": "Kundenstimmen",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Das sagen unsere Kunden"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe Section",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Textfarbe Überschrift",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Bewertung",
      "settings": [
        {
          "type": "range",
          "id": "stars",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Sterne",
          "default": 5
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Unglaubliche Qualität! Ich bestelle sicher wieder."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Name",
          "default": "Max Mustermann"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kundenstimmen",
      "blocks": [
        { "type": "review" },
        { "type": "review" },
        { "type": "review" }
      ]
    }
  ]
}
{% endschema %}