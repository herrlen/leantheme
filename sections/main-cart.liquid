{% comment %}
  Lean Minimalist Cart (FIXED LAYOUT)
  Features: Centered Page Width, Quantity Selectors, Discount Code.
{% endcomment %}

<div class="cart-section section-{{ section.id }}-padding">
  <div class="page-width">
    
    <h1 class="cart-heading">{{ 'cart.title' | t }}</h1>

    {%- if cart.item_count > 0 -%}
      {%- render 'free-shipping-meter', context: 'page' -%}

      <form action="{{ routes.cart_url }}" method="post" id="cart-form" class="cart-form">

        <div class="cart-grid">
          <div class="cart-header hidden-mobile">
            <span class="col-product">{{ 'cart.product' | t }}</span>
            <span class="col-quantity">{{ 'cart.quantity' | t }}</span>
            <span class="col-total">{{ 'cart.total' | t }}</span>
          </div>

          <div class="cart-items">
            {%- for item in cart.items -%}
              <div class="cart-item">
                
                <div class="item-media-content">
                  <div class="item-media">
                    {% if item.image %}
                      <img src="{{ item.image | image_url: width: 300 }}" 
                           alt="{{ item.image.alt | escape }}"
                           loading="lazy"
                           width="100" height="100">
                    {% endif %}
                  </div>
                  <div class="item-info">
                    <a href="{{ item.url }}" class="item-title">{{ item.product.title }}</a>
                    {%- unless item.product.has_only_default_variant -%}
                      <p class="item-variant">{{ item.variant.title }}</p>
                    {%- endunless -%}
                    {%- if settings.preorder_enabled and item.properties._pre_order == 'true' -%}
                      <span class="item-preorder-label" style="display:inline-block;padding:2px 6px;font-size:0.7rem;font-weight:600;text-transform:uppercase;background:{{ settings.preorder_badge_color | default: '#6366f1' }};color:{{ settings.preorder_badge_text_color | default: '#fff' }};border-radius:2px;margin-top:4px;">
                        {{ settings.preorder_badge_text | default: 'Vorbestellung' }}
                      </span>
                    {%- endif -%}
                    <div class="item-price-mobile">{{ item.final_price | money }}</div>
                  </div>
                </div>

                <div class="item-quantity">
                  <div class="quantity-wrapper">
                    <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity={{ item.quantity | minus: 1 }}" class="qty-btn" aria-label="{{ 'cart.decrease_quantity' | t }}">-</a>
                    <input type="number" name="updates[]" value="{{ item.quantity }}" min="0" class="qty-input" readonly aria-label="{{ 'cart.quantity' | t }}: {{ item.product.title }}">
                    <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity={{ item.quantity | plus: 1 }}" class="qty-btn" aria-label="{{ 'cart.increase_quantity' | t }}">+</a>
                  </div>
                  <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0" class="item-remove">{{ 'cart.remove' | t }}</a>
                </div>

                <div class="item-total hidden-mobile">
                  {{ item.final_line_price | money }}
                </div>

              </div>
            {%- endfor -%}
          </div>
        </div>

        {%- comment -%} Cross-Sell Recommendations {%- endcomment -%}
        <div class="cart-page-cross-sell" style="margin-top:32px;">
          {%- render 'cross-sell-cart', context: 'page', limit: 3, heading: 'cart.also_matching' | t -%}
        </div>

        <div class="cart-footer">
          <div class="cart-notes-wrapper">
            {%- if section.settings.show_note -%}
              {%- render 'cart-notes',
                context: 'page',
                display_mode: section.settings.cart_note_display,
                label_text: section.settings.cart_note_label,
                placeholder: section.settings.cart_note_placeholder,
                char_limit: section.settings.cart_note_char_limit,
                show_gift: section.settings.show_gift_option,
                gift_label: section.settings.gift_option_label
              -%}
            {%- endif -%}
          </div>

          <div class="cart-summary">
            {%- comment -%} Store Pickup Selector {%- endcomment -%}
            {%- if settings.pickup_enabled -%}
              {%- render 'store-pickup-selector', context: 'page' -%}
            {%- endif -%}

            {%- if settings.preorder_enabled -%}
              {%- assign has_preorder_items = false -%}
              {%- for item in cart.items -%}
                {%- if item.properties._pre_order == 'true' -%}
                  {%- assign has_preorder_items = true -%}
                  {%- break -%}
                {%- endif -%}
              {%- endfor -%}
              {%- if has_preorder_items -%}
                <div class="cart-preorder-notice" style="padding:10px 12px;margin-bottom:16px;font-size:0.85rem;line-height:1.4;border-radius:4px;background:color-mix(in srgb, {{ settings.preorder_badge_color | default: '#6366f1' }} 8%, #fafafa);border:1px solid {{ settings.preorder_badge_color | default: '#6366f1' }};">
                  {{ settings.preorder_cart_notice | default: 'Deine Bestellung enthält Vorbestellungen — längere Lieferzeit möglich.' }}
                </div>
              {%- endif -%}
            {%- endif -%}

            <div class="subtotal-row">
              <span class="subtotal-label">{{ 'cart.subtotal' | t }}</span>
              <span class="subtotal-price">{{ cart.total_price | money }}</span>
            </div>
            
            <p class="shipping-note">{{ 'cart.taxes_and_shipping' | t }}</p>

            <div class="discount-wrapper">
              <label for="discount-input" class="visually-hidden">{{ 'cart.discount_placeholder' | t }}</label>
              <input type="text" id="discount-input" name="discount" placeholder="{{ 'cart.discount_placeholder' | t }}">
            </div>

            <button type="submit" name="checkout" class="checkout-btn" id="checkout-btn">
              {{ 'cart.checkout' | t }}
            </button>

            {%- if additional_checkout_buttons -%}
              <div class="additional-checkout-buttons">
                {{ content_for_additional_checkout_buttons }}
              </div>
            {%- endif -%}
          </div>
        </div>

      </form>
    {%- else -%}
      <div class="cart-empty">
        <p>{{ 'cart.empty' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="button-primary">{{ 'cart.shop_now' | t }}</a>
      </div>
    {%- endif -%}
  </div>
</div>

{%- if section.settings.show_note -%}
  <script src="{{ 'cart-notes.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if settings.shipping_meter_enabled -%}
  <script src="{{ 'free-shipping-meter.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if settings.pickup_enabled -%}
  <script src="{{ 'store-pickup.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<script>
  document.getElementById('checkout-btn')?.addEventListener('click', function(e) {
    e.preventDefault(); 
    var discountCode = document.getElementById('discount-input').value;
    var checkoutUrl = '/checkout';
    if(discountCode) { checkoutUrl += '?discount=' + discountCode; }
    window.location.href = checkoutUrl;
  });
</script>

<style>
  .section-{{ section.id }}-padding {
    padding-top: 60px; padding-bottom: 60px;
  }
  
  /* --- LAYOUT FIX (Seitenabstand) --- */
  .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 20px; /* Minimaler Abstand Mobil */
    padding-right: 20px;
  }
  
  @media(min-width: 750px) {
    .page-width {
      padding-left: 40px; /* Mehr Abstand auf Desktop */
      padding-right: 40px;
    }
  }
  /* ---------------------------------- */

  .cart-heading { font-size: 2.5rem; margin-bottom: 40px; text-align: left; }
  .cart-header { display: grid; grid-template-columns: 2fr 1fr 1fr; border-bottom: 1px solid #e5e5e5; padding-bottom: 15px; margin-bottom: 20px; font-weight: 600; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 0.05em; color: #666; }
  .cart-item { display: grid; grid-template-columns: 1fr; gap: 20px; padding: 20px 0; border-bottom: 1px solid #f0f0f0; align-items: center; }
  @media(min-width: 750px) { .cart-item { grid-template-columns: 2fr 1fr 1fr; } .hidden-mobile { display: block; } }
  .item-media-content { display: flex; gap: 20px; align-items: center; }
  .item-media img { width: 80px; height: auto; border-radius: 4px; border: 1px solid #eee; }
  .item-title { font-weight: 600; text-decoration: none; color: inherit; font-size: 1.1rem; }
  .item-variant { font-size: 0.9rem; color: #666; margin: 4px 0 0; }
  .item-price-mobile { margin-top: 5px; font-weight: 600; display: block; }
  @media(min-width: 750px) { .item-price-mobile { display: none; } }
  .quantity-wrapper { display: inline-flex; border: 1px solid #ddd; border-radius: 4px; height: 40px; align-items: center; }
  .qty-btn { padding: 0 15px; text-decoration: none; color: #000; font-size: 1.2rem; }
  .qty-input { width: 40px; text-align: center; border: none; font-size: 1rem; -moz-appearance: textfield; pointer-events: none; }
  .qty-input::-webkit-inner-spin-button { -webkit-appearance: none; margin: 0; }
  .item-remove { display: block; font-size: 0.8rem; text-decoration: underline; color: #999; margin-top: 8px; margin-left: 5px; }
  .item-remove:hover { color: #d00; }
  .item-total { font-weight: 600; font-size: 1.1rem; }
  .cart-footer { display: flex; flex-direction: column; gap: 40px; margin-top: 40px; }
  @media(min-width: 750px) { .cart-footer { flex-direction: row; justify-content: space-between; align-items: flex-start; } .cart-summary { width: 400px; margin-left: auto; } }
  .cart-summary { background: #fafafa; padding: 30px; border-radius: 8px; }
  .subtotal-row { display: flex; justify-content: space-between; align-items: center; font-size: 1.3rem; font-weight: 700; margin-bottom: 10px; }
  .shipping-note { font-size: 0.9rem; color: #666; margin-bottom: 25px; }
  .discount-wrapper { margin-bottom: 20px; }
  .discount-wrapper input { width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; font-size: 1rem; }
  .checkout-btn { width: 100%; background: #000; color: #fff; padding: 15px; border: none; border-radius: 4px; font-size: 1.1rem; cursor: pointer; font-weight: 600; transition: opacity 0.3s; }
  .checkout-btn:hover { opacity: 0.8; }
  .cart-empty { text-align: center; padding: 60px 0; }
  .cart-empty p { font-size: 1.5rem; margin-bottom: 30px; }
  .button-primary { background: #000; color: #fff; padding: 12px 30px; text-decoration: none; border-radius: 4px; }
  .additional-checkout-buttons { margin-top: 15px; }
  .additional-checkout-buttons .shopify-payment-button__button { border-radius: 4px !important; min-height: 48px; }
</style>

{% schema %}
{
  "name": "t:sections.main-cart.name",
  "settings": [
    {
      "type": "header",
      "content": "Bestellnotiz"
    },
    {
      "type": "checkbox",
      "id": "show_note",
      "label": "Notizfeld anzeigen",
      "default": true
    },
    {
      "type": "select",
      "id": "cart_note_display",
      "label": "Darstellung",
      "options": [
        { "value": "visible", "label": "Immer sichtbar" },
        { "value": "accordion", "label": "Aufklappbar (Accordion)" }
      ],
      "default": "visible"
    },
    {
      "type": "text",
      "id": "cart_note_label",
      "label": "Label Text",
      "default": "Anmerkungen zur Bestellung"
    },
    {
      "type": "text",
      "id": "cart_note_placeholder",
      "label": "Placeholder Text",
      "default": "Besondere Wünsche, Lieferanweisungen..."
    },
    {
      "type": "range",
      "id": "cart_note_char_limit",
      "min": 0,
      "max": 500,
      "step": 10,
      "label": "Zeichenlimit",
      "default": 250,
      "info": "0 = kein Limit"
    },
    {
      "type": "checkbox",
      "id": "show_gift_option",
      "label": "Geschenkoption anzeigen",
      "default": false
    },
    {
      "type": "text",
      "id": "gift_option_label",
      "label": "Geschenkoption Label",
      "default": "Als Geschenk verpacken"
    }
  ]
}
{% endschema %}