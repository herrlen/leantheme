<div class="featured-collection-wrapper section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="featured-heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    <div class="product-grid-container">
      {%- assign limit = section.settings.products_to_show -%}
      
      {%- for product in section.settings.collection.products limit: limit -%}
        <div class="grid-item">
          {% render 'product-card', card_product: product %}
        </div>
      {%- else -%}
        {%- for i in (1..4) -%}
          <div class="grid-item">
            <div class="product-card">
              <div class="card-image-wrapper">
                 {{ 'product-' | append: i | placeholder_svg_tag }}
              </div>
              <div class="card-info">
                <h3>Beispiel Produkt {{ i }}</h3>
                <span>19,99 ‚Ç¨</span>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  /* Lokales CSS f√ºr maximale Stabilit√§t */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: #fff; /* Sicherstellen, dass Hintergrund wei√ü ist */
  }

  .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    width: 100%;
    box-sizing: border-box;
  }

  .featured-heading {
    text-align: center;
    margin-bottom: 40px;
    font-size: 2rem;
  }

  .product-grid-container {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    gap: {{ section.settings.column_gap }}px;
    width: 100%;
  }

  @media (min-width: 768px) {
    .product-grid-container {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }

  /* WICHTIG: Stellt sicher, dass die Bilder das Layout nicht sprengen */
  .grid-item .card-image-wrapper {
    position: relative;
    overflow: hidden;
    padding-top: 100%; /* Sorgt f√ºr ein quadratisches Seitenverh√§ltnis */
    background-color: #f5f5f5;
  }

  .grid-item .card-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Stellt sicher, dass das Bild den Raum f√ºllt, ohne sich zu verzerren */
  }
  
  /* Schutz gegen kaputtes Layout: Items m√ºssen sichtbar sein */
  .grid-item {
    min-width: 0; /* WICHTIG f√ºr CSS Grid, verhindert Overflow */
  }
</style>

