{% comment %}
  FAQ Section with accessible accordion
  - Uses button elements for accessibility
  - aria-expanded and aria-controls for screen readers
  - Keyboard navigation support
  - Renders JSON-LD schema via snippet
{% endcomment %}

{%- render 'schema-faq', blocks: section.blocks -%}

<div class="faq-section section-{{ section.id }}-padding">
  <div class="page-width {% if section.settings.layout == 'list' %}page-width--narrow{% endif %}">

    {%- if section.settings.heading != blank -%}
      <div class="faq-header text-{{ section.settings.heading_alignment }}">
        <h2 class="faq-heading">{{ section.settings.heading }}</h2>
        {%- if section.settings.text != blank -%}
          <div class="faq-text rte">{{ section.settings.text }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div
        class="faq-accordion {% if section.settings.layout == 'grid' %}faq-grid{% endif %}"
        id="Accordion-{{ section.id }}"
        role="list"
      >
        {%- for block in section.blocks -%}
          {%- if block.type == 'question' and block.settings.question != blank -%}
            <div
              class="faq-item"
              role="listitem"
              {{ block.shopify_attributes }}
            >
              <h3 class="faq-item__heading">
                <button
                  type="button"
                  class="faq-trigger"
                  aria-expanded="false"
                  aria-controls="faq-content-{{ block.id }}"
                  id="faq-trigger-{{ block.id }}"
                >
                  <span class="faq-question">{{ block.settings.question | escape }}</span>
                  <span class="faq-icon" aria-hidden="true">
                    <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M6 1V11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                      <path d="M1 6H11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                    </svg>
                  </span>
                </button>
              </h3>
              <div
                id="faq-content-{{ block.id }}"
                class="faq-content"
                role="region"
                aria-labelledby="faq-trigger-{{ block.id }}"
                hidden
              >
                <div class="faq-answer rte">
                  {{ block.settings.answer }}
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

  </div>
</div>

<script>
  (function() {
    const accordion = document.getElementById('Accordion-{{ section.id }}');
    if (!accordion) return;

    const triggers = accordion.querySelectorAll('.faq-trigger');
    const autoClose = {{ section.settings.enable_accordion | json }};

    triggers.forEach(function(trigger) {
      trigger.addEventListener('click', function() {
        const expanded = this.getAttribute('aria-expanded') === 'true';
        const content = document.getElementById(this.getAttribute('aria-controls'));

        if (!content) return;

        // Auto-close other items if enabled
        if (autoClose && !expanded) {
          triggers.forEach(function(otherTrigger) {
            if (otherTrigger !== trigger) {
              const otherContent = document.getElementById(otherTrigger.getAttribute('aria-controls'));
              otherTrigger.setAttribute('aria-expanded', 'false');
              if (otherContent) otherContent.setAttribute('hidden', '');
            }
          });
        }

        // Toggle current item
        this.setAttribute('aria-expanded', !expanded);
        if (expanded) {
          content.setAttribute('hidden', '');
        } else {
          content.removeAttribute('hidden');
        }
      });

      // Keyboard navigation (Arrow keys, Home, End)
      trigger.addEventListener('keydown', function(e) {
        const items = Array.from(triggers);
        const index = items.indexOf(this);
        let newIndex;

        switch (e.key) {
          case 'ArrowDown':
            e.preventDefault();
            newIndex = (index + 1) % items.length;
            items[newIndex].focus();
            break;
          case 'ArrowUp':
            e.preventDefault();
            newIndex = (index - 1 + items.length) % items.length;
            items[newIndex].focus();
            break;
          case 'Home':
            e.preventDefault();
            items[0].focus();
            break;
          case 'End':
            e.preventDefault();
            items[items.length - 1].focus();
            break;
        }
      });
    });
  })();
</script>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }

  #Accordion-{{ section.id }} .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  #Accordion-{{ section.id }} .page-width--narrow {
    max-width: 800px;
  }

  #Accordion-{{ section.id }} .text-center { text-align: center; }
  #Accordion-{{ section.id }} .text-left { text-align: left; }

  .section-{{ section.id }}-padding .faq-heading {
    font-size: 2rem;
    margin-bottom: 10px;
    margin-top: 0;
  }

  .section-{{ section.id }}-padding .faq-text {
    margin-bottom: 40px;
    opacity: 0.8;
  }

  .section-{{ section.id }}-padding .faq-header {
    margin-bottom: 40px;
  }

  /* Grid Layout */
  #Accordion-{{ section.id }}.faq-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 15px;
  }

  @media (min-width: 768px) {
    #Accordion-{{ section.id }}.faq-grid {
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }
  }

  /* Accordion Item */
  #Accordion-{{ section.id }} .faq-item {
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  #Accordion-{{ section.id }}:not(.faq-grid) .faq-item:first-child {
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  #Accordion-{{ section.id }}.faq-grid .faq-item {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    background: #fff;
  }

  #Accordion-{{ section.id }} .faq-item__heading {
    margin: 0;
  }

  /* Accessible Button Trigger */
  #Accordion-{{ section.id }} .faq-trigger {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 20px;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-size: inherit;
    font-family: inherit;
    font-weight: 600;
    color: inherit;
    gap: 1rem;
  }

  #Accordion-{{ section.id }} .faq-trigger:hover {
    opacity: 0.7;
  }

  #Accordion-{{ section.id }} .faq-trigger:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: -2px;
  }

  #Accordion-{{ section.id }} .faq-question {
    font-size: 1.1rem;
    flex: 1;
  }

  #Accordion-{{ section.id }} .faq-icon {
    transition: transform 0.3s ease;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #Accordion-{{ section.id }} .faq-trigger[aria-expanded="true"] .faq-icon {
    transform: rotate(45deg);
  }

  /* Content Panel */
  #Accordion-{{ section.id }} .faq-content[hidden] {
    display: none;
  }

  #Accordion-{{ section.id }} .faq-answer {
    padding: 0 20px 25px 20px;
    line-height: 1.6;
    color: rgba(0, 0, 0, 0.8);
    animation: faqFadeIn-{{ section.id }} 0.3s ease forwards;
  }

  #Accordion-{{ section.id }} .faq-answer p:last-child {
    margin-bottom: 0;
  }

  @keyframes faqFadeIn-{{ section.id }} {
    from {
      opacity: 0;
      transform: translateY(-5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

