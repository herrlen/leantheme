  Features: Icons, Mobile Font Control, Static/Animated Switch
{% endcomment %}

<div class="marquee-section section-{{ section.id }}-padding">
  <div class="marquee-container">
    
    {%- if section.settings.enable_animation -%}
      <div class="marquee-track {% if section.settings.pause_on_hover %}pause-on-hover{% endif %}">
        {%- for i in (1..2) -%}
          <div class="marquee-content" {% if i == 2 %}aria-hidden="true"{% endif %}>
            {%- for block in section.blocks -%}
              <div class="marquee-item" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != 'none' -%}
                  <span class="marquee-icon">
                    {% if block.settings.icon == 'star' %}â˜…{% endif %}
                    {% if block.settings.icon == 'check' %}âœ”{% endif %}
