          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    overflow: hidden;
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }

  .marquee-container {
    width: 100%;
    user-select: none;
  }

  /* === STYLES FÃœR TEXT & ICON === */
  .marquee-item {
    display: inline-flex;
    align-items: center;
    padding: 0 40px; /* Abstand im Slider */
  }

  .marquee-text {
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
    text-transform: uppercase;
    letter-spacing: 0.05em;
    line-height: 1.2;
    white-space: nowrap;
  }

  .marquee-icon {
    margin-right: 10px;
    font-size: 1.2em;
    display: flex; align-items: center;
  }

  /* === ANIMATION STYLES === */
  .marquee-track {
    display: flex;
    flex-shrink: 0;
    align-items: center;
    white-space: nowrap;
    animation: scroll {{ section.settings.speed }}s linear infinite;
  }
  
  .marquee-track.pause-on-hover:hover { animation-play-state: paused; }

  {% if section.settings.direction == 'right' %}
    .marquee-track { animation-direction: reverse; }
  {% endif %}

  .marquee-content {
    display: flex; align-items: center; flex-shrink: 0;
  }

  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-100%); }
  }

  /* === STATIC STYLES === */
  .marquee-static {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap; /* Wichtig fÃ¼r Mobile: Umbruch erlauben */
    text-align: center;
    gap: 15px 30px; /* Abstand zwischen Elementen wenn statisch */
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .static-item {
    padding: 0; /* Kein Padding im Static Mode, wir nutzen Gap */
  }

  /* === MOBILE ANPASSUNG (Variable) === */
  @media(max-width: 750px) {
    .marquee-text { 
      font-size: {{ section.settings.font_size_mobile }}px; 
      white-space: normal; /* Erlaubt Umbruch auf Handy im Static Mode */
    }
    
    .marquee-item { padding: 0 20px; }
    
    .marquee-static { 
      flex-direction: column; /* Auf Handy untereinander, wenn statisch */
      gap: 10px;
    }
    
    .static-item { padding: 0; }
  }
</style>

