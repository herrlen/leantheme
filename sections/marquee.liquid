        {%- endfor -%}
      </div>

    {%- else -%}
      <div class="marquee-static">
        {%- for block in section.blocks -%}
          <div class="marquee-item static-item" {{ block.shopify_attributes }}>
            {%- if block.settings.icon != 'none' -%}
              <span class="marquee-icon">
                {% if block.settings.icon == 'star' %}â˜…{% endif %}
                {% if block.settings.icon == 'check' %}âœ”{% endif %}
