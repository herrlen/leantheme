<div class="main-page-section section-{{ section.id }}-padding">
  <div class="page-width page-width--narrow">
    <h1 class="main-page-title">
      {{ page.title | escape }}
    </h1>
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | default: 60 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 60 }}px;
  }

  .page-width {
    margin: 0 auto;
    max-width: 1200px;
    /* Sicherheits-Fix: default: 20 */
    padding-left: clamp(20px, {{ section.settings.padding_side | default: 20 }}px, 10vw);
    padding-right: clamp(20px, {{ section.settings.padding_side | default: 20 }}px, 10vw);
    text-align: {{ section.settings.text_align | default: 'left' }};
  }

  .page-width--narrow { max-width: 800px; }
  .main-page-title { margin-bottom: 30px; font-size: 2.5rem; }
  .rte { line-height: 1.6; font-size: 1.1rem; }
  .rte img { max-width: 100%; height: auto; }
</style>

{% schema %}
{
  "name": "Seite (Inhalt)",
  "settings": [
    {
      "type": "range",
      "id": "padding_side",
      "min": 20, "max": 200, "step": 10, "unit": "px", "label": "Seitlicher Abstand", "default": 20
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Textausrichtung",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "center", "label": "Zentriert" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0, "max": 100, "step": 4, "default": 60, "label": "Abstand oben"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0, "max": 100, "step": 4, "default": 60, "label": "Abstand unten"
    }
  ]
}
{% endschema %}