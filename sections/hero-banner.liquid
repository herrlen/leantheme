{% comment %}
  Lean Hero Banner
  Optimiert für LCP (Largest Contentful Paint) und transparenten Header.
  Unterstützt optional Video-Hintergrund (MP4, YouTube, Vimeo).
{% endcomment %}

{%- liquid
  assign hero_has_video = false
  if section.settings.video_bg_enabled
    if section.settings.video_bg != blank or section.settings.video_bg_url != blank
      assign hero_has_video = true
    endif
  endif
-%}

<div class="hero-banner section-{{ section.id }}">
  {%- if hero_has_video -%}
    {%- comment -%} Video Background Mode {%- endcomment -%}
    {%- render 'video-background',
      video_mp4: section.settings.video_bg,
      video_url: section.settings.video_bg_url,
      fallback_image: section.settings.image,
      overlay_color: '#000000',
      overlay_opacity: section.settings.overlay_opacity,
      mobile_video: section.settings.video_bg_mobile,
      section_id: section.id,
      priority: true
    -%}
  {%- else -%}
    {%- comment -%} Image Background Mode {%- endcomment -%}
    <div
      class="hero-media"
      {%- if section.settings.enable_parallax -%}
        data-parallax
        data-parallax-speed="{{ section.settings.parallax_speed | default: 3 | times: 0.1 }}"
        data-parallax-direction="up"
        data-parallax-mobile="false"
      {%- endif -%}
    >
      <div class="hero-media__inner" {% if section.settings.enable_parallax %}data-parallax-target{% endif %}>
        {%- if section.settings.image != blank -%}
          {%- liquid
            assign desktop_class = 'hero-img'
            if section.settings.image_mobile != blank
              assign desktop_class = 'hero-img hide-mobile'
            endif
          -%}
          {%- render 'image-lazy',
            image: section.settings.image,
            priority: true,
            sizes: '100vw',
            widths: '800,1200,1600,2000',
            class: desktop_class,
            wrapper: false,
            object_fit: 'cover'
          -%}
          {%- if section.settings.image_mobile != blank -%}
            {%- render 'image-lazy',
              image: section.settings.image_mobile,
              priority: true,
              sizes: '100vw',
              widths: '400,600,800',
              class: 'hero-img hide-desktop',
              wrapper: false,
              object_fit: 'cover'
            -%}
          {%- endif -%}
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'hero-img placeholder' }}
        {%- endif -%}
      </div>

      <div class="hero-overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}"></div>
    </div>
  {%- endif -%}

  <div class="hero-content page-width">
    <div class="hero-text-wrapper">
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-heading">{{ section.settings.heading }}</h1>
      {%- endif -%}
      
      {%- if section.settings.text != blank -%}
        <p class="hero-subheading">{{ section.settings.text }}</p>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="button-primary hero-btn">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  /* Lokales CSS für diese Section */
  .section-{{ section.id }} {
    position: relative;
    height: {{ section.settings.section_height }}vh; /* Höhe einstellbar */
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-media__inner {
    width: 100%;
    height: 100%;
  }

  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Parallax: target needs extra height to prevent gaps */
  [data-parallax] .hero-media__inner {
    height: 120%;
    position: absolute;
    top: -10%;
    left: 0;
    width: 100%;
    will-change: transform;
  }

  @media (prefers-reduced-motion: reduce) {
    [data-parallax] .hero-media__inner {
      height: 100%;
      top: 0;
      transform: none !important;
    }
  }

  .placeholder {
    background-color: #333;
    fill: #555;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000000;
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 2; /* Über dem Bild */
    text-align: center;
    width: 100%;
    padding: 0 20px;
  }

  .hero-text-wrapper {
    max-width: 800px;
    margin: 0 auto;
    color: #ffffff; /* Immer weißer Text auf Hero */
  }

  .hero-heading {
    font-size: clamp(2.5rem, 5vw, 4.5rem); /* Responsive Schriftgröße */
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 20px;
    color: #ffffff;
    text-shadow: 0 2px 10px rgba(0,0,0,0.3);
  }

  .hero-subheading {
    font-size: 1.25rem;
    margin-bottom: 30px;
    opacity: 0.9;
    line-height: 1.6;
  }

  .hero-btn {
    font-size: 1.1rem;
    padding: 15px 35px;
    transition: transform 0.2s ease;
  }
  
  .hero-btn:hover {
    transform: scale(1.05);
  }

  /* Mobile/Desktop Switch */
  @media (max-width: 767px) {
    .hide-mobile { display: none; }
  }
  @media (min-width: 768px) {
    .hide-desktop { display: none; }
  }
</style>

{% schema %}
{
  "name": "⭐️ Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Bild"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Bild (Optional)"
    },
    {
      "type": "header",
      "content": "Video-Hintergrund"
    },
    {
      "type": "checkbox",
      "id": "video_bg_enabled",
      "label": "Video-Hintergrund aktivieren",
      "default": false,
      "info": "Ersetzt das Hintergrundbild durch ein Video. Das Desktop-Bild wird als Fallback verwendet."
    },
    {
      "type": "video",
      "id": "video_bg",
      "label": "Video (MP4 Upload)"
    },
    {
      "type": "text",
      "id": "video_bg_url",
      "label": "Video URL (YouTube / Vimeo)",
      "info": "Wird nur verwendet wenn kein MP4 hochgeladen ist."
    },
    {
      "type": "checkbox",
      "id": "video_bg_mobile",
      "label": "Video auch auf Mobile",
      "default": false,
      "info": "Deaktiviert: Auf Mobile wird nur das Fallback-Bild angezeigt."
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Bild/Video abdunkeln",
      "default": 30
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Höhe (Bildschirm %)",
      "default": 85
    },
    {
      "type": "header",
      "content": "Parallax"
    },
    {
      "type": "checkbox",
      "id": "enable_parallax",
      "label": "Parallax-Effekt aktivieren",
      "default": false,
      "info": "Sanfter Scroll-Effekt auf dem Hintergrundbild. Nur bei Bild-Modus (nicht Video). Wird bei prefers-reduced-motion deaktiviert."
    },
    {
      "type": "range",
      "id": "parallax_speed",
      "min": 1,
      "max": 9,
      "step": 1,
      "label": "Parallax Geschwindigkeit",
      "default": 3,
      "info": "1 = Subtil, 9 = Stark"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Der neue Standard"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Untertext",
      "default": "Beschreibe hier deine Kollektion oder dein Angebot."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Jetzt shoppen"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "⭐️ Hero Banner"
    }
  ]
}
{% endschema %}