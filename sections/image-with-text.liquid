{% comment %}
  Lean Image with Text (Modular & SEO Friendly)
  Features: Blocks, freie H-Tag Wahl (h1-h4), Custom Color, Radius
{% endcomment %}

<div class="section-image-text section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="image-text-grid {% if section.settings.layout == 'right' %}layout-reverse{% endif %}">
      
      <div class="grid-item-media">
        <div class="media-wrapper">
          {%- if section.settings.image != blank -%}
            <img
              src="{{ section.settings.image | image_url: width: 1000 }}"
              alt="{{ section.settings.image.alt | escape }}"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              loading="lazy"
              class="image-text-img"
            >
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'image-text-img placeholder' }}
          {%- endif -%}
        </div>
      </div>

      <div class="grid-item-content">
        <div class="content-wrapper">
          
          {%- for block in section.blocks -%}
            {% case block.type %}
              
              {%- when 'caption' -%}
                <{{ block.settings.heading_tag }} class="subheading" {{ block.shopify_attributes }}>
                  {{ block.settings.caption | escape }}
                </{{ block.settings.heading_tag }}>

              {%- when 'heading' -%}
                <{{ block.settings.heading_tag }} class="heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                  {{ block.settings.heading }}
                </{{ block.settings.heading_tag }}>

              {%- when 'text' -%}
                <div class="rte body-text" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </div>

              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  <a href="{{ block.settings.button_link }}" 
                     class="{% if block.settings.button_style == 'secondary' %}button-secondary{% else %}button-primary{% endif %} mt-4"
                     {{ block.shopify_attributes }}>
                    {{ block.settings.button_label }}
                  </a>
                {%- endif -%}
              
              {%- when 'icon' -%}
                 <div class="icon-block" {{ block.shopify_attributes }}>
                   {%- if block.settings.custom_icon != blank -%}
                     <img src="{{ block.settings.custom_icon | image_url: width: 50 }}" 
                          alt="Icon" width="50" height="50" style="width: {{ block.settings.icon_width }}px; height: auto;">
                   {%- endif -%}
                 </div>

            {% endcase %}
          {%- endfor -%}

        </div>
      </div>

    </div>
  </div>
</div>

<style>
  /* BASIS STYLE */
  .section-image-text {
    background-color: #ffffff;
    color: #000000;
  }

  /* CONTAINER LOGIC */
  .page-width {
    max-width: 1200px;
    margin: 0 auto;   
    padding-left: clamp(20px, {{ section.settings.padding_side }}px, 10vw);
    padding-right: clamp(20px, {{ section.settings.padding_side }}px, 10vw);
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    
    {% if section.settings.custom_bg_color != blank and section.settings.custom_bg_color != 'rgba(0,0,0,0)' %}
      background-color: {{ section.settings.custom_bg_color }} !important;
    {% endif %}
  }

  /* Textfarben-Override */
  {% if section.settings.custom_text_color != blank and section.settings.custom_text_color != 'rgba(0,0,0,0)' %}
    .section-{{ section.id }}-padding,
    .section-{{ section.id }}-padding .heading,
    .section-{{ section.id }}-padding .body-text,
    .section-{{ section.id }}-padding .subheading {
      color: {{ section.settings.custom_text_color }} !important;
    }
  {% endif %}

  /* Radius & Shadow */
  .media-wrapper {
    border-radius: {{ section.settings.corner_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  }

  /* Grid Layout */
  .image-text-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: center;
  }

  @media (min-width: 990px) {
    .image-text-grid {
      grid-template-columns: 1fr 1fr;
      gap: 60px;
    }
    .layout-reverse { direction: rtl; }
    .layout-reverse > * { direction: ltr; }
  }

  .image-text-img {
    width: 100%; height: auto; display: block; object-fit: cover; aspect-ratio: 4/3;
  }

  .content-wrapper { padding: 20px 0; }
  
  /* Block Styles */
  .subheading { 
    text-transform: uppercase; 
    font-size: 0.85rem; 
    letter-spacing: 0.1em; 
    opacity: 0.7; 
    margin-bottom: 10px; 
    display: block; 
    font-weight: 700;
    /* Reset margin für h tags, falls genutzt */
    margin-top: 0;
    line-height: 1.2;
  }
  
  .heading { line-height: 1.1; margin-bottom: 20px; margin-top: 0; }
  .heading.h2 { font-size: clamp(2rem, 4vw, 2.5rem); }
  .heading.h3 { font-size: clamp(1.5rem, 3vw, 2rem); }
  
  .body-text { font-size: 1.1rem; line-height: 1.6; margin-bottom: 20px; opacity: 0.9; }
  .body-text p { margin: 0 0 15px 0; }
  .body-text p:last-child { margin-bottom: 0; }
  
  .mt-4 { margin-top: 1rem; display: inline-block; margin-right: 10px; }
  .icon-block { margin-bottom: 15px; }

  .button-primary { padding: 12px 24px; background: #000; color: #fff; text-decoration: none; border-radius: 4px; }
  .button-secondary { padding: 12px 24px; background: transparent; border: 1px solid currentColor; text-decoration: none; border-radius: 4px; }
</style>

{% schema %}
{
  "name": "Bild mit Text (Modular)",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Bild"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Bild Position",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "right", "label": "Rechts" }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Design & Farben"
    },
    {
      "type": "color",
      "id": "custom_bg_color",
      "label": "Hintergrundfarbe",
      "default": "transparent"
    },
    {
      "type": "color",
      "id": "custom_text_color",
      "label": "Textfarbe",
      "default": "transparent"
    },
    {
      "type": "range",
      "id": "corner_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Ecken abrunden",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_side",
      "min": 20,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Seitlicher Abstand",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Überschrift",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Bild mit Text",
          "label": "Überschrift"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            { "value": "h2", "label": "Groß (H2 Look)" },
            { "value": "h3", "label": "Mittel (H3 Look)" }
          ],
          "default": "h2",
          "label": "Optische Größe"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "label": "HTML Tag (SEO)",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" },
            { "value": "h4", "label": "H4" },
            { "value": "div", "label": "DIV" }
          ],
          "default": "h2",
          "info": "Wähle den semantischen Tag für SEO."
        }
      ]
    },
    {
      "type": "caption",
      "name": "Subline",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "caption",
          "default": "Über uns",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "label": "HTML Tag (SEO)",
          "options": [
            { "value": "p", "label": "Paragraph (P)" },
            { "value": "span", "label": "Span" },
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" },
            { "value": "h4", "label": "H4" }
          ],
          "default": "p",
          "info": "Wähle den semantischen Tag für SEO."
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 3,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Nutze diesen Text um deine Marke näher zu beschreiben.</p>",
          "label": "Inhalt"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Mehr erfahren",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "options": [
            { "value": "primary", "label": "Primär" },
            { "value": "secondary", "label": "Sekundär (Outline)" }
          ],
          "default": "primary",
          "label": "Stil"
        }
      ]
    },
    {
      "type": "icon",
      "name": "Icon / Logo",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "custom_icon",
          "label": "Icon hochladen"
        },
        {
          "type": "range",
          "id": "icon_width",
          "min": 20,
          "max": 100,
          "step": 5,
          "unit": "px",
          "label": "Icon Größe",
          "default": 40
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bild mit Text (Modular)",
      "blocks": [
        { "type": "caption" },
        { "type": "heading" },
        { "type": "text" },
        { "type": "button" }
      ]
    }
  ]
}
{% endschema %}