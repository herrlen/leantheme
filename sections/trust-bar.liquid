{% comment %}
  Lean Trust Bar / Logo List
  Perfekt für "Bekannt aus", Partner-Logos oder Zertifikate.
  Features: Auto-Scroll auf Mobile (optional), Graustufen-Filter.
{% endcomment %}

<div class="trust-bar section-{{ section.id }}-padding">
  <div class="page-width">
    
    {%- if section.settings.heading != blank -%}
      <h3 class="trust-bar__heading">{{ section.settings.heading }}</h3>
    {%- endif -%}

    <div class="trust-bar__grid">
      {%- for block in section.blocks -%}
        <div class="trust-bar__item" {{ block.shopify_attributes }}>
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="trust-bar__link">
          {%- endif -%}

          {%- if block.settings.logo != blank -%}
            <img
              src="{{ block.settings.logo | image_url: width: 300 }}"
              alt="{{ block.settings.logo.alt | default: 'Partner Logo' }}"
              width="{{ section.settings.logo_width }}"
              height="{{ section.settings.logo_width | divided_by: block.settings.logo.aspect_ratio | ceil }}"
              loading="lazy"
              class="trust-bar__image"
              style="opacity: {{ section.settings.logo_opacity }}%"
            >
          {%- else -%}
            {{ 'logo' | placeholder_svg_tag: 'trust-bar__image placeholder-svg' }}
          {%- endif -%}

          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }

  .trust-bar__heading {
    text-align: center;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.6;
    margin-bottom: 25px;
    margin-top: 0;
  }

  .trust-bar__grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 30px 50px; /* Vertikal 30px, Horizontal 50px */
  }

  .trust-bar__item {
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: {{ section.settings.logo_width }}px;
  }

  .trust-bar__image {
    width: 100%;
    height: auto;
    display: block;
    /* Optional: Logos schwarz-weiß machen für Clean Look */
    {% if section.settings.grayscale %}
      filter: grayscale(100%);
      transition: filter 0.3s ease;
    {% endif %}
  }

  {% if section.settings.grayscale %}
    .trust-bar__image:hover {
      filter: grayscale(0%);
    }
  {% endif %}

  .placeholder-svg {
    background: rgba(0,0,0,0.05);
    border-radius: 4px;
  }
</style>

{% schema %}
{
  "name": "Logo Liste / Trust Bar",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Unsere Partner"
    },
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrund",
      "default": "#fafafa"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Maximale Logo Breite",
      "default": 120
    },
    {
      "type": "range",
      "id": "logo_opacity",
      "min": 10,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Transparenz",
      "default": 80
    },
    {
      "type": "checkbox",
      "id": "grayscale",
      "label": "Logos schwarz-weiß anzeigen",
      "default": true
    },
    {
      "type": "header",
      "content": "Abstände"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Bild"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (Optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Liste",
      "blocks": [
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" }
      ]
    }
  ]
}
{% endschema %}