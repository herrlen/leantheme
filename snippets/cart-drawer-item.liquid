{% comment %}
  Snippet: Cart Drawer Item
  Wird verwendet, um einzelne Produkte im Warenkorb darzustellen.
{% endcomment %}

<div class="drawer-item" data-line-item-key="{{ item.key }}">
  
  <div class="item-img">
    {% if item.image %}
      <img
        src="{{ item.image | image_url: width: 200 }}"
        alt="{{ item.image.alt | escape }}"
        width="80"
        height="80"
        loading="lazy"
        style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;"
      >
    {% else %}
      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <div class="item-info">
    <a href="{{ item.url }}" class="item-title" style="text-decoration: none; color: inherit; font-weight: 600; display: block;">
      {{ item.product.title }}
    </a>

    {%- unless item.product.has_only_default_variant -%}
      <div class="item-variant" style="font-size: 0.85rem; color: #777; margin-bottom: 4px;">
        {{ item.variant.title }}
      </div>
    {%- endunless -%}

    <div class="item-price" style="margin-bottom: 8px;">
      {{ item.final_line_price | money }}
    </div>

    <div class="item-controls" style="display: flex; justify-content: space-between; align-items: center;">
      <div class="qty-adjust" style="display: flex; border: 1px solid #ddd; border-radius: 4px;">
        <button type="button" onclick="changeQty('{{ item.key }}', {{ item.quantity | minus: 1 }})" style="background: none; border: none; width: 25px; cursor: pointer;">-</button>
        <span style="width: 30px; text-align: center; font-size: 0.9rem; line-height: 25px;">{{ item.quantity }}</span>
        <button type="button" onclick="changeQty('{{ item.key }}', {{ item.quantity | plus: 1 }})" style="background: none; border: none; width: 25px; cursor: pointer;">+</button>
      </div>

      <button type="button" class="item-remove" onclick="changeQty('{{ item.key }}', 0)" style="background: none; border: none; font-size: 0.8rem; text-decoration: underline; color: #777; cursor: pointer;">
        Entfernen
      </button>
    </div>
  </div>
</div>